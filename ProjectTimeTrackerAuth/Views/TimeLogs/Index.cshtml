@model IEnumerable<ProjectTimeTrackerAuth.Models.TimeLog>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Username)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UsersID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndTime)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Activities)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsersID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Activities.ActivityID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TimeLogID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TimeLogID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TimeLogID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
